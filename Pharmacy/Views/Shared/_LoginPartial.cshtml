@using Microsoft.AspNetCore.Identity
@using System.Net.Mail
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav" style="display:flex;flex-direction:row ;margin-right:40px; ">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item" style="padding-right:4px;">
            @{
                var x = new MailAddress(User.Identity.Name).User;
                    <a class="nav-link text-dark"  >Hello @x!</a>
            }

        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn btn-outline-danger">Logout</button>
            </form>
        </li>
    }
    else
    {

        <li class="nav-item" style="margin-right:7px;">
            <a class="btn btn-outline-success" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-outline-success" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
